<% provide(:title, t(".title")) %>
<h1><%= t(".title") %></h1>
<%= simple_form_for(@user) do |f| %>
	<%= f.error_notification %>
	<%= f.input :name %>
	<%= f.input :email %>
	<%= f.input :password %>
	<%= f.input :password_confirmation %>
	<%= f.error :base %>
	<%= f.button :submit, :class => "btn-primary" %>
<% end %>
